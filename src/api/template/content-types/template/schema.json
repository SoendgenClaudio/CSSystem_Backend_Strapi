{
  "kind": "collectionType",
  "collectionName": "templates",
  "info": {
    "singularName": "template",
    "pluralName": "templates",
    "displayName": "Template"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "Description": {
      "type": "text",
      "required": true
    },
    "TitleImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "Images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "Type": {
      "type": "enumeration",
      "enum": [
        "CMS",
        "Statisch"
      ]
    },
    "Category": {
      "type": "enumeration",
      "enum": [
        "Portfolio",
        "Shop",
        "Landingpage"
      ]
    },
    "Features": {
      "type": "component",
      "component": "template.features",
      "repeatable": true,
      "required": true
    },
    "TechnicalDetails": {
      "type": "component",
      "component": "template.technical-details",
      "repeatable": false,
      "required": true
    }
  }
}
